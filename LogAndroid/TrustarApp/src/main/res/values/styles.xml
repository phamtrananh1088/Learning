<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme2" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="materialAlertDialogTheme">@style/PrimaryTitleAlertDialog</item>
        <item name="android:editTextColor">@color/textDark</item>
        <item name="android:textColor">@color/textDark</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:windowBackground">@drawable/window_placeholder</item>
        <item name="colorSecondary">@color/colorPrimary</item>
        <item name="actionModeBackground">@color/colorPrimary</item>
        <item name="android:textColorHint">@color/textHint</item>
    </style>

    <style name="LoginTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:windowBackground">@drawable/window_placeholder</item>
        <item name="materialAlertDialogTheme">@style/PrimaryTitleAlertDialog</item>
        <item name="colorAccent">@color/textColorPrimary</item>
        <item name="colorControlNormal">@color/defaultBackground</item>
    </style>

    <style name="PrimaryTitleAlertDialog" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="materialAlertDialogTitleTextStyle">@style/PrimaryTitleAlertDialogTitle</item>
        <item name="colorOnSurface">@color/textDark</item>
    </style>

    <style name="PrimaryTitleAlertDialogTitle" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="ToolbarTheme" parent="AppTheme2">
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="colorSecondary">@android:color/white</item>
        <item name="android:editTextColor">@android:color/white</item>
    </style>

    <style name="LoginTheme.TextInputLayoutStyle">
        <item name="colorError">@color/accentOrange</item>
        <item name="colorOnSurface">@color/colorAccent</item>
    </style>

</resources>
